<body class = "container">

  <P> 這是標題：<%= @event.topic %></P>
  <P> 這是種類：<%= @event.category_name  %></P>
  <P> 這是內容：<%= simple_format(@event.article) %> </P>
  <P> 留言數量：<%= @event.comments.count %></P>

  <% if @event.logo.exists? %>
    <%= image_tag ( @event.logo.url) %>
  <% else %>
     None
  <% end %>


  <% like = @event.finy_like_by(current_user) %>
  <div id="like-area">
  <%= render :partial => "like", :locals => { :like => like } %>
  </div>


<p> 誰按過讚? </p>
  <% @likes.each do |like| %>
    <li>
      <%= like.user.try(:first_name) %>
    </li>
  <% end %>


  <%= form_for @comment, :url => event_comments_path(@event), :remote => true do |f| %>
     <%= f.text_field :comment %>
     <%= f.submit %>
  <% end %>


  <ul id="comments-list">
  <% @comments.each do |comment| %>
    <%= render :partial => "event_comments/comment", :locals => { :comment => comment } %>
  <% end %>
  </ul>
  <p><%= link_to '回到首頁', events_path %></p>

</body>
