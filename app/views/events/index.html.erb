<body>

  <ul class="container">
  <div class = "topic_area" >

    <%= link_to '新增文章', new_event_path, :class => " btn btn-primary active "%>
    <p>
        <%= search_form_for @q do |f| %>
          <%= f.label :topic_cont,"尋找文章" %>
          <%= f.search_field :topic_cont %>
          <%= f.submit "Search" %>
        <% end %>
    </p>


    <td>
       <button class="btn btn-default" type="submit">
       <%= link_to "所有文章", events_path, :remote => true %>
       </button>
       <% @categories.each do |category| %>
       <button class="btn btn-default" type="submit">
       <%= link_to category.name , "/events?category_id=#{category.id}", :remote => true %>
       </button>
       <% end %>
    </td>



    <table class ="table" border='2'>

      <thead>
        <tr>
          <td width="80" align="center" valign = "middle">
          <%= sort_link(@q, :category_name,"類別") %>
          </td>
          <td width="300" align="center" valign = "middle">
          <%= sort_link(@q, :topic,"標題") %>
          </td>
          <td width="80" align="center" valign = "middle">
          <%= sort_link(@q, :user_id,"使用者") %>
          </td>
          <td width="80" align="center" valign = "middle">
          <%= sort_link(@q, :comments_count,"留言數") %>
          </td>
          <td width="80" align="center" valign = "middle">
          <%= sort_link(@q, :likes_count,"馬力值") %>
          </td>
          <td width="200" align="center" valign = "middle">
          <%= sort_link(@q, :created_at,"發文時間") %>
          </td>
          <td width="200" align="center" valign = "middle">
          <%= sort_link(@q, :comments_created_at,"最後留言") %>
          </td>
          <% if current_user%>
          <td width="120" align="center" valign = "middle">操作</td>
          <% end %>
        </tr>
      </thead>
      <tbody id="events" >
       <%= render @events %>
      </tbody>
    </table>
  </div>
<div id="paginator">
  <%= paginate @events, :remote => true %>
</div>
  </ul>
</body>


