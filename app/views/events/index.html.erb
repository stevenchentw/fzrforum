<body>

  <ul class="container">
  <p>這是首頁</p>

  <div class = "topic_area" >

    <%= link_to '新增', new_event_path, :class => " btn btn-primary active "%>

    <% @events.each do |event| %>

      <table class ="table">

        <th class = " category_topic">
          <%= event.category_name %>
          <%= event.topic %>
        </th>

        <th class = "user_data">
          <%= event.user.first_name %>
          <%= event.created_at.strftime('%F') %>
        </th>


        <th class="btn-group">
          <%= link_to '顯示', event_path(event) , :class => " btn btn-primary active "%>
          <%= link_to '修改', edit_event_path(event) ,:class => " btn btn-success active "%>
          <%= link_to '刪除', event_path(event) , :method => :delete, :class => " btn btn-danger active" %>
        </th>

      </table>

    <% end %>

  </div>

  <%= paginate @events %>

  </ul>
</body>
